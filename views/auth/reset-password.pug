extends ../layout/index

block contenido     
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina


        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="password") Coloca tu Nuevo Password
                        input#email.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nuevo Password" type="password" name="password")
                    
                    

                    <input type="submit" value="Guardar Password" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-full shadow-lg">
       

